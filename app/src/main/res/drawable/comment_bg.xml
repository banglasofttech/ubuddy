<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="#cacdd2c9" />
        <corners android:radius="5dp" />
    </shape>
</item>

<item android:left="0dp" android:top="0dp" android:bottom="3dp">
    <shape android:shape="rectangle">
        <stroke android:width="1dp" android:color="@color/lightgrey" />
        <solid android:color="@color/colorWhiteGray"/>
        <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
    </shape>
</item>
</layer-list>