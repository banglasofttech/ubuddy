<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.my.ubuddy">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_group"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Authentication.LoginActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.MainActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View.Authentication.UniversityActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View.Authentication.RegistrationActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View.EventView"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View.PostView"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View.AddEvent"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View.ViewEventList"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>